<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XDevDaysJau.View.CustomizacaoPorPlataforma"
             Title="Cust. por Plataforma">

    <StackLayout Padding="20,10,10,10" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="100" WidthRequest="100">
        <StackLayout.BackgroundColor>
            <OnPlatform x:TypeArguments="Color"
                        iOS="Red"
                        Android="Green" />
        </StackLayout.BackgroundColor>        
    </StackLayout>
</ContentPage>